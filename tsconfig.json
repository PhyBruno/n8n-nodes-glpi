{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "declaration": true,
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "rootDir": ".",
    "sourceMap": true,
    "resolveJsonModule": true,
    "lib": ["ES2020"],
    "types": ["node"]
  },
  "include": ["nodes/**/*", "index.ts"]
}
